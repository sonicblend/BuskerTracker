.row
  .columns.medium-12
    %h2 List of performances

    %table
      %thead
        %tr
          %th Start date
          %th End date
          %th Amplified
          %th Busker
          %th
          %th

      %tbody
        - @performances.includes(:busker)
        - @performances.each do |performance|
          %tr
            %td= performance.start_date
            %td= performance.end_date
            %td= performance.amplified?.yesno
            %td= performance.busker.name
            %td= link_to 'Edit', edit_performance_path(performance)
            %td= link_to 'Destroy', performance, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Performance', new_performance_path
