= form_for @performance do |f|
  - if @performance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@performance.errors.count, "error")} prohibited this performance from being saved:"
      %ul
        - @performance.errors.full_messages.each do |msg|
          %li= msg

  .field.datetime
    = f.datetime_select :start_date, {}, {class: 'datetime'}
  .field.datetime
    = f.datetime_select :end_date, {}, {class: 'datetime'}
  .field
    = f.check_box :amplified
  .field
    = f.number_field :busker_id
  .actions
    = f.submit 'Save'
