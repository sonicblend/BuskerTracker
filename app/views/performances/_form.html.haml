= form_for @performance do |f|
  - if @performance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@performance.errors.count, "error")} prohibited this performance from being saved:"
      %ul
        - @performance.errors.full_messages.each do |msg|
          %li= msg
  .row
    .columns
      .field
        = f.select :location_id, Location.all.map{ |location| [location.name, location.id] }
  .row
    .columns
      .field
        = f.select :busker_id, Busker.all.map{ |busker| [busker.name, busker.id] }
  .row
    .columns.medium-6
      .field.datetime
        = f.datetime_select :start_date, {}, {class: 'datetime'}
  .row
    .columns.medium-6
      .field.datetime
        = f.datetime_select :end_date, {}, {class: 'datetime'}
  .row
    .columns
      .field
        = f.check_box :amplified
  .row
    .columns
      .actions
        = f.submit 'Save'
