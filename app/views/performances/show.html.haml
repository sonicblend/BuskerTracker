.row
  .columns.medium-12
    %p#notice= notice

    %p
      %b Start date:
      = @performance.start_date
    %p
      %b End date:
      = @performance.end_date
    %p
      %b Amplified:
      = @performance.amplified?.yesno
    %p
      %b Busker:
      = Busker.find(@performance.busker_id).name

    = link_to 'Edit', edit_performance_path(@performance)
    \|
    = link_to 'Back', performances_path
