.row
  .columns.medium-12
    %h1 Listing ratings

    %table
      %thead
        %tr
          %th Performance
          %th Emotion
          %th Comment
          %th User
          %th
          %th
          %th

      %tbody
        - @ratings.each do |rating|
          %tr
            %td= rating.performance.to_s
            %td= rating.emotion
            %td= rating.comment
            %td= rating.user.email
            %td= link_to 'Show', rating
            %td= link_to 'Edit', edit_rating_path(rating)
            %td= link_to 'Destroy', rating, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Rating', new_rating_path
