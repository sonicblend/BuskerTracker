%h1 List of buskers

%table
  %thead
    %tr
      %th Image
      %th Name
      %th Description
      %th Facebook
      %th Twitter
      %th Website
      %th
      %th
      %th

  %tbody
    - @buskers.each do |busker|
      %tr
        %td= busker.image_id
        %td= busker.name
        %td= busker.description
        %td= busker.facebook
        %td= busker.twitter
        %td= busker.website
        %td= link_to 'Show', busker
        %td= link_to 'Edit', edit_busker_path(busker)
        %td= link_to 'Destroy', busker, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Busker', new_busker_path
