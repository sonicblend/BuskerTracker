%p#notice= notice

%p
  %b Name:
  = @busker.name
%p
  %b Description:
  = @busker.description
%p
  %b Image:
  - if @busker.image_id.present?
    = cl_image_tag(@busker.image_id, :crop => :fill, :width => 120, :height => 80)
  - else
    = 'no image'
%p
  %b Facebook:
  = @busker.facebook
%p
  %b Twitter:
  = @busker.twitter
%p
  %b Website:
  = @busker.website

= link_to 'Edit', edit_busker_path(@busker)
\|
= link_to 'Back', buskers_path
