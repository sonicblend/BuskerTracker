= form_for @busker do |f|
  - if @busker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@busker.errors.count, "error")} prohibited this busker from being saved:"
      %ul
        - @busker.errors.full_messages.each do |msg|
          %li= msg

  .field
