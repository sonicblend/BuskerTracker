    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image_id
    = f.text_field :image_id
  .field
    = f.label :facebook
    = f.text_field :facebook
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :website
    = f.text_field :website
  .actions
    = f.submit 'Save'
